
<div id="seite">   

  <div class="row">
	<div class="header col-sm-12" style="border: 1px solid red">
	  <%= render partial: "seite", locals: { seite: @header } %>
	</div>	
	
	<div class="menu col-sm-12" style="border: 1px solid blue">
	  <%= render partial: "seite", locals: { seite: @menu } %>	
	</div>
  </div>
	
  <div class="row">		
  
    <!--  -center-  -->
    <% if !@left and !@right %>
	  <div class="center col-sm-12" style="border: 1px solid green">
	    <%= render partial: "seite", locals: { seite: @center } %>
	  </div>
	  
	<!--  left-center-right  -->
	<% elsif @left and @right %>
	  <div class="left col-sm-2">
	    <%= render partial: "seite", locals: { seite: @left } %>	
	  </div>		
	  <div class="center col-sm-8" >
	    <%= render partial: "seite", locals: { seite: @center } %>
	  </div>	 	  
	  <div class="right col-sm-2">
	    <%= render partial: "seite", locals: { seite: @right } %>
	  </div> 	  
	  
	<!--  left-center  -->
    <% elsif @left %>
	  <div class="left col-sm-2" style="border: 1px solid orange">
	    <%= render partial: "seite", locals: { seite: @left } %>	
	  </div>	
	  <div class="center col-sm-10" style="border: 1px solid purple">
	    <%= render partial: "seite", locals: { seite: @center } %>
	  </div>	
	 

    <!--  center-right  -->
    <% elsif @right %>
	  <div class="center col-sm-10 " >
	    <%= render partial: "seite", locals: { seite: @center } %>
	  </div>	
	  <div class="right col-sm-2">
	    <%= render partial: "seite", locals: { seite: @right } %>	
	  </div>
	  	  	  	  	  
	<% end %>
	
  </div>

  <div class="row">	
	<div class="footer col-sm-12" style="border: 1px solid cyan">
	  <%= render partial: "seite", locals: { seite: @footer } %>
	</div>
  </div>
  	
</div> 

