<%= form_tag prove_it_path, class: 'form-horizontal login_decor' do %>
 
  <! 
    title box
  >  
  <div class="alert alert-info" role="alert">
	Who are you?
  </div>
  <%= render "user_errors" %>   	  

  <! 
    labels & entry fields
  >    
  <div class="card" style="border: 3px red solid">
    <div class="card-header" >
      <div class="form-group" style="border: 1px red dashed"> 
        <%= label_tag :claim, "username or email:", class: 'control-label' %>
        <%= text_field_tag :claim, '', autofocus: true,
	    class: 'col-sm-3 form-control width-auto' %>	
      </div>		
      <div class="login_spacer"></div>
      <div class="form-group" style="border: 1px red dotted"> 
	    <%= submit_tag 'Submit', class: "btn btn-primary" %>		
	    <small class="text-muted"><%= link_to 'cancel', see_u_path %> </small>
      </div>
      <div class="login_spacer"></div>

    </div>  
  </div> 
 

<% end %>  
<%= render "captcha" %>
