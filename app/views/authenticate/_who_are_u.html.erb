<%= render "authenticate/fb_script" %>	

	<%= form_tag prove_it_path, class: 'form-horizontal login_decor' do %>
	  <div class="alert alert-info" role="alert">
	    Who are you?
	  </div>
	  <%= render "user_errors" %>    
	  <div class="field form-group">
	    <%= label_tag :claim, "username or email:", class: 'col-sm-2 control-label' %>
	    <div class="col-sm-2">
	      <%= text_field_tag :claim, '', autofocus: true, class: 'form-control' %>
	    </div>
		<div class="col-sm-2">		  
		  <%= link_to 'cancel', see_u_path, class: 'col-sm-3 control-label' %>
	    </div>
	  </div>

    <br>
  
	<div class="row" id="fb_div">
          <%= label_tag :claim, "or via Facebook:", class: 'col-sm-2 control-label' %>
	  <div class="col-sm-10">
	    <% image_tag 'fb.png', onclick: 'fb_login()', class: 'fb_button' %>
	    <fb:login-button scope="public_profile,email" onlogin="fb_login_state();">
	    </fb:login-button>
	    &nbsp; &nbsp; <span id='fb_login_info'></span>
	  </div>
	</div>  
      
	<% end %>

