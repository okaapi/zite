
<!DOCTYPE html>
<html>
<head>
  <title><%= @center ? @center.name : "" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <%= render "auth/authenticate/layout_insert" %>
  
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>  
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <div id="application">
    <%= yield %>
  </div>

  <% if ( @user and @user.admin? ) %>
	  <div class="cleardiv" id="version"> <small> <small> 
	  <%= controller.controller_name %> / <%= controller.action_name %> 
      <%= RUBY_VERSION%> <%= Rails.version %> <%= Rails.env[0] %> 
      <%= editable( @center, @user ).to_s[0] %> <%= viewable( @center, @user ).to_s[0] %> 
      <% if @cached %> 
        C <%= prettytime(Time.now) %>
      <% end %>
	  </small> </small> </div>  
  <% else %>
	  <div class="cleardiv" id="version"> <small> <small> 
      <%= RUBY_VERSION%> <%= Rails.version %> <%= Rails.env[0] %> 
      <%= editable( @center, @user ).to_s[0] %> <%= viewable( @center, @user ).to_s[0] %> 
      <% if @cached %> 
        C <%= prettytime(Time.now) %>
      <% end %>
	  </small> </small> </div>  	  
  <% end %>

</body>
</html>

